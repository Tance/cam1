<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/orientationView"
            android:layout_width="match_parent"
            android:text="开始之前请填写以下参数，如未填写则按照默认值进行"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:text="请输入流服务器地址"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:id="@+id/edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="例如：chenlinlin.wang/live/stream"/>
        <EditText
            android:id="@+id/edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="保留文本框"/>
        <EditText
            android:id="@+id/edit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="保留文本框"/>
        <EditText
            android:id="@+id/edit4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="保留文本框"/>
        <EditText
            android:id="@+id/edit5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="保留文本框"/>
        <Button
            android:id="@+id/startCam"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="开始监控"
            android:onClick="startCam"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="保留按键"
            android:onClick="measuringEnding"
            />



    </LinearLayout>
</ScrollView>